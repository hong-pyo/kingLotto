<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:id="@+id/lottoItemLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
            <TextView
                    android:id="@+id/roundTextView"
                    android:layout_alignParentLeft="true"
                    android:text="876회"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:id="@+id/luckyImage"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/roundTextView"
                    android:padding="5dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/lucky1_48"/>
            <ImageView
                    android:id="@+id/weatherImage"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_toRightOf="@+id/luckyImage"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:src="@drawable/weather_icon_1"/>
            <TextView
                    android:id="@+id/locationTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="강남구 삼성동"
                    android:visibility="gone"
                    android:textSize="16sp"/>
            <TextView
                    android:id="@+id/winnerDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="1월 1일"
                    android:textColor="#FF0000FF"
                    android:textSize="16sp"/>

        </RelativeLayout>
        <ImageView
                android:id="@+id/userCustomPicture"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:visibility="gone"
                android:src="@drawable/back_image_1"
        />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="당첨 번호 : "
            />
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/winnerNumber1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/circle_test_24"
                        android:textSize="24sp"/>
                <TextView
                        android:id="@+id/winnerNumber2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/winnerNumber1"
                        android:background="@drawable/circle_test_24"
                        android:textSize="24sp"/>
                <TextView
                        android:id="@+id/winnerNumber3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/winnerNumber2"
                        android:background="@drawable/circle_test_24"
                        android:textSize="24sp"/>
                <TextView
                        android:id="@+id/winnerNumber4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/winnerNumber3"
                        android:background="@drawable/circle_test_24"
                        android:textSize="24sp"/>
                <TextView
                        android:id="@+id/winnerNumber5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/winnerNumber4"
                        android:background="@drawable/circle_test_24"
                        android:textSize="24sp"/>
                <TextView
                        android:id="@+id/winnerNumber6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="34"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/winnerNumber5"
                        android:background="@drawable/circle_test_24"
                        android:textSize="24sp"/>
                <TextView
                        android:id="@+id/bonusNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/winnerNumber6"
                        android:background="@drawable/circle_test_24"
                        android:textSize="24sp"/>
                <TextView
                        android:id="@+id/winnerCount"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:text="n개 당첨"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
